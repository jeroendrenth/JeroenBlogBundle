{% extends 'JeroenBlogBundle:Default:base.html.twig' %}

{% block body %}
	{% if id is defined %}
	<div class="container">
		{% set menu = knp_menu_get('JeroenBlogBundle:Builder:blogTabs', [], {'id': id} ) %}
		{{ knp_menu_render(menu, {'currentAsLink': true, 'currentClass': 'active', 'compressed': true}) }}
	</div>
	{% endif %}

	{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.body) }}
        {{ form_errors(form.body) }}
        {{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
    </div>

{{ form_end(form) }}
{% endblock %}